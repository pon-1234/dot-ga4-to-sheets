# Google Cloud Project Configuration
PROJECT_ID=your-gcp-project-id

# Single Dataset Configuration (for backward compatibility)
BIGQUERY_DATASET=your-ga4-dataset-id
BIGQUERY_TABLE_PREFIX=events_

# Multi-Dataset Configuration (JSON format)
# DATASETS_CONFIG='[{"name":"Website A","dataset":"analytics_123456","tablePrefix":"events_","description":"Main website"},{"name":"Website B","dataset":"analytics_789012","tablePrefix":"events_","description":"Mobile app"}]'

# Alternative: Datasets config file path
DATASETS_CONFIG_FILE=./config/datasets.json

# Google Sheets Configuration
SPREADSHEET_ID=your-google-sheets-id
CREDENTIALS_PATH=./credentials/service-account.json

# Multi-dataset mode: create separate sheets for each dataset
MULTI_DATASET_MODE=true
# Comparison mode: create comparison sheets across datasets
COMPARISON_MODE=true

# Optional: Specific date range for testing
START_DATE=2024-01-01
END_DATE=2024-12-31